{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}{% layout settings.customer_layout %}

<div class="section-title desktop-12 tablet-6 mobile-3">
  <h1>{% comment %}ly_i18n_replace_for_[ 'customer.order.title' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'customer.order.title' | t }}{% endcapture %}{% include 'ly-static-string' with '2929729' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %} {{ order.name }}</h1>
</div>

<div id="customer-wrapper" class="desktop-12 tablet-6 mobile-3">


  {% if order.cancelled %}
  <div id="order_cancelled" class="flash notice">
    <h5 id="order_cancelled_title">{% comment %}ly_i18n_replace_for_[ 'customer.order.cancelled' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'customer.order.cancelled' | t }}{% endcapture %}{% include 'ly-static-string' with '2929730' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %} <span class="note">{{ order.cancelled_at | date: "%B %d, %Y %I:%M%p" }}</span></h5>
    <span class="note">{% comment %}ly_i18n_replace_for_[ 'customer.order.cancelled_reason' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'customer.order.cancelled_reason' | t }}{% endcapture %}{% include 'ly-static-string' with '2929731' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</span>
  </div>
  {% endif %}

  <div class="note order_date">{% comment %}ly_i18n_replace_for_[ 'customer.order.date' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'customer.order.date' | t }}{% endcapture %}{% include 'ly-static-string' with '2929732' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %} {{ order.created_at | date: "%B %d, %Y %I:%M%p" }}</div>

  <div id="order_address" class="group">
    
    <div id="order_payment" class="desktop-6 tablet-3 mobile-3">
      <h5 class="order_section_title">{% comment %}ly_i18n_replace_for_[ 'customer.order.billing_address' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'customer.order.billing_address' | t }}{% endcapture %}{% include 'ly-static-string' with '2929733' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</h5>
      <p><span class="note">{% comment %}ly_i18n_replace_for_[ 'customer.order.payment_status' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'customer.order.payment_status' | t }}{% endcapture %}{% include 'ly-static-string' with '2929734' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}:</span> <span class="status_{{ order.financial_status }}">{{ order.financial_status_label }}</span></p>
      
      <div class="address note">
        <p>{{ order.billing_address.name }}</p>
        <p>{{ order.billing_address.company }}</p>
        <p>{{ order.billing_address.street }}</p>
        <p>{{ order.billing_address.city }}, {{ order.billing_address.province }}</p>
        <p>{{ order.billing_address.country }} {{ order.billing_address.zip }}</p>
        <p>{{ order.billing_address.phone }}</p>
      </div>
      
    </div>
    
    
    {% if order.shipping_address %}
    <div id="order_shipping" class="desktop-6 tablet-3 mobile-3">      
      <h5 class="order_section_title">{% comment %}ly_i18n_replace_for_[ 'customer.order.shipping_address' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'customer.order.shipping_address' | t }}{% endcapture %}{% include 'ly-static-string' with '2929735' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</h5>
      <p><span class="note">{% comment %}ly_i18n_replace_for_[ 'customer.order.fulfillment_status' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'customer.order.fulfillment_status' | t }}{% endcapture %}{% include 'ly-static-string' with '2929736' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}:</span> <span class="status_{{ order.fulfillment_status }}">{{ order.fulfillment_status_label }}</span></p>
      
      <div class="address note">
        <p>{{ order.shipping_address.name }}</p>
        <p>{{ order.shipping_address.company }}</p>
        <p>{{ order.shipping_address.street }}</p>
        <p>{{ order.shipping_address.city }}, {{ order.shipping_address.province }}</p>
        <p>{{ order.shipping_address.country }} {{ order.shipping_address.zip }}</p>
        <p>{{ order.shipping_address.phone }}</p>
      </div>
      
    </div>
    {% endif %}
    
  </div>

  <table id="order_details">
    <thead>
      <tr>
        <th>{% comment %}ly_i18n_replace_for_[ 'customer.order.details.product' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'customer.order.details.product' | t }}{% endcapture %}{% include 'ly-static-string' with '2929737' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</th>
        <th>{% comment %}ly_i18n_replace_for_[ 'customer.order.details.sku' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'customer.order.details.sku' | t }}{% endcapture %}{% include 'ly-static-string' with '2929738' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</th>
        <th>{% comment %}ly_i18n_replace_for_[ 'customer.order.details.price' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'customer.order.details.price' | t }}{% endcapture %}{% include 'ly-static-string' with '2929739' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</th>
        <th class="center">{% comment %}ly_i18n_replace_for_[ 'customer.order.details.quantity' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'customer.order.details.quantity' | t }}{% endcapture %}{% include 'ly-static-string' with '2929740' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</th>
        <th class="center">{% comment %}ly_i18n_replace_for_[ 'customer.order.details.total' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'customer.order.details.total' | t }}{% endcapture %}{% include 'ly-static-string' with '2929741' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</th>
      </tr>
    </thead>
    <tbody>
      {% for line_item in order.line_items %}
      <tr id="{{ line_item.id }}" class="{% cycle 'odd', 'even' %}">
        <td class="product">
          {% comment %}ly_code_replace_for_[ line_item.title | link_to: line_item.product.url ]_begin{% endcomment %}{% include 'ly-title' with line_item %}{{ ly_translation | link_to: line_item.product.url }}{% comment %}ly_code_replace_end{% endcomment %} 
          {% if line_item.fulfillment %}
          <div class="note">
            <ly-as-2929728>Fulfilled</ly-as-2929728> {{ line_item.fulfillment.created_at | date: "%b %d" }}
            {% if line_item.fulfillment.tracking_number %}
            <a href="{{ line_item.fulfillment.tracking_url }}">{{ line_item.fulfillment.tracking_company }} #{{ line_item.fulfillment.tracking_number}}</a>
            {% endif %}
          </div>
          {% endif %}
        </td>
        <td class="sku note">{{ line_item.sku }}</td>
        <td class="money">{{ line_item.price | money }}</td>
        <td class="qty center">{{ line_item.quantity }}</td>
        <td class="total money center">{{ line_item.quantity | times: line_item.price | money }}</td>
      </tr>
      {% endfor %}
    </tbody>  
    <tfoot>
      <tr class="order_summary note">
        <td class="label" colspan="4">{% comment %}ly_i18n_replace_for_[ 'customer.order.details.subtotal' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'customer.order.details.subtotal' | t }}{% endcapture %}{% include 'ly-static-string' with '2929742' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</td>
        <td class="total money center">{{ order.subtotal_price | money }}</td>
      </tr>   

      {% for discount in order.discounts %}
      <tr class="order_summary discount">
        <td class="label" colspan="4">{{ discount.code }} {% comment %}ly_i18n_replace_for_[ 'customer.order.discount' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'customer.order.discount' | t }}{% endcapture %}{% include 'ly-static-string' with '2929743' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</td>
        <td class="total money center">{{ discount.savings | money }}</td>
      </tr>
      {% endfor %}

      {% for shipping_method in order.shipping_methods %}
      <tr class="order_summary note">
        <td class="label" colspan="4">{% comment %}ly_i18n_replace_for_[ 'customer.order.shipping' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'customer.order.shipping' | t }}{% endcapture %}{% include 'ly-static-string' with '2929744' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %} ({% comment %}ly_code_replace_for_[ shipping_method.title ]_begin{% endcomment %}{% include 'ly-title' with shipping_method %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}):</td>
        <td class="total money center">{{ shipping_method.price | money }}</td>
      </tr>
      {% endfor %}

      {% for tax_line in order.tax_lines %}
      <tr class="order_summary note">
        <td class="label" colspan="4">{% comment %}ly_i18n_replace_for_[ 'customer.order.tax' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'customer.order.tax' | t }}{% endcapture %}{% include 'ly-static-string' with '2929745' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %} ({% comment %}ly_code_replace_for_[ tax_line.title ]_begin{% endcomment %}{% include 'ly-title' with tax_line %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %} {{ tax_line.rate | times: 100 }}%):</td>
        <td class="total money center">{{ tax_line.price | money }}</td>
      </tr>
      {% endfor %}    

      <tr class="order_summary order_total">
        <td class="label" colspan="4">{% comment %}ly_i18n_replace_for_[ 'customer.order.details.total' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'customer.order.details.total' | t }}{% endcapture %}{% include 'ly-static-string' with '2929741' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}:</td>
        <td class="total money center">{{ order.total_price | money }} {{ order.currency }}</td>
      </tr>   
    </tfoot>  
  </table>

</div>
