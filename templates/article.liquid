            <dt class="{% if form.errors contains 'email' %}error{% endif %}"><label for="comment_email">{% comment %}ly_i18n_replace_for_[ 'blogs.comments.your_email' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'blogs.comments.your_email' | t }}{% endcapture %}{% include 'ly-static-string' with '2929642' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</label></dt>
            <dd><input type="text" id="comment_email" name="comment[email]" size="40" value="{{form.email}}" class="{% if form.errors contains 'email' %}input-error{% endif %}" /></dd>

