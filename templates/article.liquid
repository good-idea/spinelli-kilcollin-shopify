          <p class="hint">{% comment %}ly_i18n_replace_for_[ 'blogs.comments.moderated' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'blogs.comments.moderated' | t }}{% endcapture %}{% include 'ly-static-string' with '2929644' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</p>
          {% endif %}

          <input type="submit" value="{% comment %}ly_i18n_replace_for_[ 'blogs.comments.post' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'blogs.comments.post' | t }}{% endcapture %}{% include 'ly-static-string' with '2929645' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}" />
          {% endform %}
        </div>
      </div>
      {% endif %}
    </div>
  </div>


  {% endpaginate %}
</div>

<script>
// Grab the initial images in the blog post and build them into a carousel.
$(document).ready(function() {
  var rte = $('#article-body .rte');
  var children = rte.children();
  var images = [];
  for (var i = 0; i < children.length; i++) {
    var child = children[i];
    var childrenFound = 0;
    for (var n = 0; n < child.childNodes.length; n++) {
      var node = child.childNodes[n];
      if (node.tagName === 'IMG' || node.nodeName === 'IMG') {
        // if an image is found, remove it from the child and add it to our array.
        var image = $(node);
        images.push(image);
        image.remove();
        childrenFound++;
      }
    }
    // remove empty parents
    if (child.childNodes.length === 0) $(child).remove();
    // if we didn't find any images, stop looking
    if (childrenFound === 0) break;
    console.log(images);
  }
  if (images.length) buildCarousel(rte, images);
  rte.addClass('carousel-built');
})

function buildCarousel(body, sourceImages) {
  var container = $('<div/>').addClass('carousel');
  var slides = [];
  var currentIndex = 1;

  // Create slides, append them to container
  for (var i = 0; i < sourceImages.length; i++) {
    console.log(sourceImages[i]);
    var slide = $('<div/>').addClass('carousel__slide')
      // .css('background-image', 'url(' + sourceImages[i].attr('src') + ')')
      .appendTo(container);
    sourceImages[i].appendTo(slide);
    slides.push(slide);
  }

  if (sourceImages.length === 1) {
    slides[0].attr('data-position', 'active');
    container.insertBefore(body);
    return true;
  }



  // make some clones so we can swipe into before & after
  var firstClone = slides[0].clone().addClass('clone').insertAfter(slides[slides.length - 1]);
  var lastClone = slides[slides.length - 1].clone().addClass('clone').insertBefore(slides[0]);
  slides.push(firstClone);
  slides.unshift(lastClone);
  var delay = 400;

  function advance(count, disableTransition) {
    var disableTranstion = disableTranstion || false;
    var newIndex = currentIndex + count;
    if (newIndex < 0) newIndex = slides.length + 1 - newIndex;
    if (disableTransition) container.addClass('disableTransition');
    for (var i = 0; i < slides.length; i++) {
      var position = '';
      if (i === newIndex) position = 'active';
      if (i < newIndex) position = 'previous';
      if (i > newIndex) position = 'next';
      slides[i].attr('data-position', position)
    }
    if (disableTransition) {
      setTimeout(function() {
        container.removeClass('disableTransition');
      }, 10)
    }
    if (newIndex === 0) {
      currentIndex = slides.length - 2;
      setTimeout(function() {
        if (!disableTransition) advance(0, true);
      }, delay);
    } else if (newIndex === slides.length -1) {
      currentIndex = 1;
      setTimeout(function() {
        if (!disableTransition) advance(0, true);
      }, delay);
    } else {
      currentIndex = newIndex;
    }
  }

  var prev = $('<div/>').addClass('carousel__button carousel__button--prev').prependTo(container);
  var next = $('<div/>').addClass('carousel__button carousel__button--next').prependTo(container);

  prev.on('click', function() {
    advance(-1);
  });
  next.on('click', function() {
    advance(1);
  });

  advance(0);
  container.insertBefore(body);
}

</script>
