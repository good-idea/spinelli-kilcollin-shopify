    {% comment %}ly_asset_replace_for_[ 'select.js' | asset_url | script_tag ]_begin{% endcomment %}{% assign ly_asset = 'select.js' %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  | script_tag }}{% comment %}ly_asset_replace_end{% endcomment %}  
