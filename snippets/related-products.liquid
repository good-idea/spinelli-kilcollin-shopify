{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}{% capture number_of_related_products_to_fetch %}{{ number_of_related_products_to_show | plus: 1 }}{% endcapture %}

{% if collection == null or collection.handle == 'frontpage' or collection.handle == 'all' %}
{% assign found_a_collection = false %}
{% for c in product.collections %}
{% if found_a_collection == false and c.handle != 'frontpage' and c.handle != 'all' and c.all_products_count > 1 %}
{% assign found_a_collection = true %}
{% assign collection = c %}
{% endif %}
{% endfor %}
{% endif %}


<div class="desktop-12 tablet-6 mobile-3" id="related">

  <div class="section-title lines tablet-6 desktop-12"><h2>{% comment %}ly_i18n_replace_for_[ 'products.general.related' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'products.general.related' | t }}{% endcapture %}{% include 'ly-static-string' with '2929599' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</h2></div> 

  <div class="collection-carousel desktop-12 tablet-6 mobile-3">
    {% assign current_product_found = false %}
    {% for prod in collection.products limit: 50 %}
    {% if prod.title == product.title %}
    {% assign current_product_found = true %}
    {% else %}
    {% unless current_product_found == false and forloop.last %}
    <div class="lazyOwl" id="prod-{{ product.id }}" data-alpha="{% comment %}ly_code_replace_for_[ prod.title ]_begin{% endcomment %}{% include 'ly-title' with prod %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}" data-price="{{ prod.price }}">  
      <div class="prod-image">
      <a href="{{ prod.url | within: collection }}" title="{% comment %}ly_code_replace_for_[ prod.title | escape ]_begin{% endcomment %}{% include 'ly-title' with prod %}{{ ly_translation | escape }}{% comment %}ly_code_replace_end{% endcomment %}">
        <img src="{{ prod.featured_image | product_img_url: '1024x1024' }}" alt="{% comment %}ly_code_replace_for_[ product.title | escape ]_begin{% endcomment %}{% include 'ly-title' with product %}{{ ly_translation | escape }}{% comment %}ly_code_replace_end{% endcomment %}" />
      </a>
      {% if settings.quick-view %}
      <a class="fancybox.ajax product-modal" href="{{ prod.url }}?view=quick">{% comment %}ly_i18n_replace_for_[ 'products.general.quick_view' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'products.general.quick_view' | t }}{% endcapture %}{% include 'ly-static-string' with '2929600' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</a>
      {% endif %}
      </div>
      <div class="product-info"> 
        <div class="product-info-inner">  
          <a href="{{ prod.url | within: collection }}"> 
            {% if settings.vendor %}<h4>{% comment %}ly_code_replace_for_[ prod.vendor ]_begin{% endcomment %}{% include 'ly-vendor' with prod %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}</h4>{% endif %}
            <h3>{% comment %}ly_code_replace_for_[ prod.title ]_begin{% endcomment %}{% include 'ly-title' with prod %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}</h3>
          </a>        
          <div class="price">
            {% if product.price < prod.compare_at_price %}
            <div class="onsale">{{ prod.price | money }}</div>
            <div class="was-related">{{ prod.compare_at_price | money }}</div>
            {% else %}
            <div class="prod-price">{% if prod.price_varies %} {% comment %}ly_i18n_replace_for_[ 'products.general.from' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'products.general.from' | t }}{% endcapture %}{% include 'ly-static-string' with '2929601' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %} {{ prod.price_min | money }} - {{ prod.price_max | money }} {% else %}{{ prod.price | money }}{% endif %}</div>
            {% endif %}	
          </div>

        </div>
      </div> 
    </div>
    {% endunless %}
    {% endif %}
    {% endfor %}
  </div>      
</div>