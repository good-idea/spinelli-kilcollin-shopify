<header>
  <h1 class="logotype"><a href="/">Spinelli Kilcollin</a></h1>
  <div class="header__top">
    <div class="column">
      {% if shop.customer_accounts_enabled %}
        <div class="my-account">
          <a href="/account">
            <i class="icon-customer"></i>
            <h4>My Account</h4>
          </a>
        </div>
        {% endif %}
      <div class="cart">
        <a href="/cart">
          <i class="icon-cart"></i>
          <h4><span id="item_count">{{ cart.item_count }}</span></h4>
        </a>
      </div>
    </div>
  </div>
  <nav>
    <div class="nav__inner column">
      <h2 class="logotype--sk"><a href="/">SK</a></h2>
      {% for link in linklists.main-menu.links %}
      {% capture child_list_handle %}{{ link.title | handleize }}{% endcapture %}
      {% assign children = (linklists[child_list_handle].links.size) %}
      <div class="nav__item {% if children > 0 %}has-submenu {% endif %}">
        <h4>
          <a href="{{ link.url }}">{{ link.title }}</a>
          {% if children > 0 %}
          <i class="icon-angle-down"></i>
          {% endif %}
        </h4>
        {% if children > 0 %}
        <div class="nav__submenu">
          {% for child in linklists[child_list_handle].links %}
          <h4>
            <a href="{{ child.url }}">{{ child.title }}</a>
          </h4>
          {% endfor %}
        </div>
        {% endif %}
      </div>
      {% endfor %}
      <div class="nav__item search">
        <h4 class="search-activate">Search</h4>
        <form class="search-form" method="get" action="/search">
          <input type="search" name="q" />
        </form>
      </div>
    </div>
  </nav>
</header>
