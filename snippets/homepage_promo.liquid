{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}{% assign promo_url = promo | append: '_url' %}
{% assign promo_alt = promo | append: '_alt' %}  
{% assign promo_img_url = promo | append: '.jpg' %}
{% assign promo_title = promo | append: '_title' %}
{% assign promo_hidden = promo | append: '_hidden' %}

<div class="promo-inner">
  <a href="{{ settings[promo_url] }}">
    <img src="{% comment %}ly_asset_replace_for_[ promo_img_url | asset_url ]_begin{% endcomment %}{% assign ly_asset = promo_img_url %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  }}{% comment %}ly_asset_replace_end{% endcomment %}" alt="{{ settings[promo_title] }}">
    <div class="caption">
      <h3>{{ settings[promo_title] }}</h3>
      <p>{{ settings[promo_hidden] }}</p>
    </div>			
  </a>
</div>


