{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}{% capture link_handle %}{{ link.title | handle }}{% endcapture %}
{% capture linkurl %}{{ link.url }}{% endcapture %} 
{% capture child_list_handle %}{{ link.title | handleize }}{% endcapture %}

{% if link.title == settings.megadropdown_link %}
<li class="dropdown">{% comment %}ly_code_replace_for_[ link.title | link_to: link.url ]_begin{% endcomment %}{% include 'ly-title' with link %}{{ ly_translation | link_to: link.url }}{% comment %}ly_code_replace_end{% endcomment %}  

  <ul class="megamenu row">
    {% if settings.nav_promo_image %}
    <span class="desktop-3 tablet-hide mm-image">
      <a href="{{ settings.nav_promo_link }}">
        <img src="{% comment %}ly_asset_replace_for_[ 'nav_promo.jpg' | asset_url ]_begin{% endcomment %}{% assign ly_asset = 'nav_promo.jpg' %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  }}{% comment %}ly_asset_replace_end{% endcomment %}">
      </a>
    </span>
    {% endif %}


    <span class="{% if settings.nav_promo_image %}desktop-9{% else %}desktop-12{% endif %} tablet-6">
      {% assign mega = 0 %}
      {% if settings.mega_1_show %}{% assign mega = mega | plus: 1 %}{% endif %}
      {% if settings.mega_2_show %}{% assign mega = mega | plus: 1 %}{% endif %}
      {% if settings.mega_3_show %}{% assign mega = mega | plus: 1 %}{% endif %}
      {% if settings.mega_4_show %}{% assign mega = mega | plus: 1 %}{% endif %}

      {% if mega > 0 %}    
      <!-- Start Megamenu Inner Links -->
      {% if settings.mega_1_show %}            
      <li class="desktop-{{ 12 | divided_by: mega }} tablet-fourth"><h4>{% comment %}ly_code_replace_for_[ linklists[settings.mega_1_links].title ]_begin{% endcomment %}{% include 'ly-title' with linklists[settings.mega_1_links] %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}</h4>
        <ul class="mega-stack">
          {% for link in linklists[settings.mega_1_links].links %}
          <li>{% comment %}ly_code_replace_for_[ link.title | link_to: link.url ]_begin{% endcomment %}{% include 'ly-title' with link %}{{ ly_translation | link_to: link.url }}{% comment %}ly_code_replace_end{% endcomment %}</li>
          {% endfor %}
        </ul>
      </li>
      {% endif %}
      {% if settings.mega_2_show %}            
      <li class="desktop-{{ 12 | divided_by: mega }} tablet-fourth"><h4>{% comment %}ly_code_replace_for_[ linklists[settings.mega_2_links].title ]_begin{% endcomment %}{% include 'ly-title' with linklists[settings.mega_2_links] %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}</h4>
        <ul class="mega-stack">
          {% for link in linklists[settings.mega_2_links].links %}
          <li>{% comment %}ly_code_replace_for_[ link.title | link_to: link.url ]_begin{% endcomment %}{% include 'ly-title' with link %}{{ ly_translation | link_to: link.url }}{% comment %}ly_code_replace_end{% endcomment %}</li>
          {% endfor %}
        </ul>
      </li>
      {% endif %}
      {% if settings.mega_3_show %}            
      <li class="desktop-{{ 12 | divided_by: mega }} tablet-fourth"><h4>{% comment %}ly_code_replace_for_[ linklists[settings.mega_3_links].title ]_begin{% endcomment %}{% include 'ly-title' with linklists[settings.mega_3_links] %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}</h4>
        <ul class="mega-stack">
          {% for link in linklists[settings.mega_3_links].links%}
          <li>{% comment %}ly_code_replace_for_[ link.title | link_to: link.url ]_begin{% endcomment %}{% include 'ly-title' with link %}{{ ly_translation | link_to: link.url }}{% comment %}ly_code_replace_end{% endcomment %}</li>
          {% endfor %}
        </ul>
      </li>
      {% endif %}
      {% if settings.mega_4_show %}            
      <li class="desktop-{{ 12 | divided_by: mega }} tablet-fourth"><h4>{% comment %}ly_code_replace_for_[ linklists[settings.mega_4_links].title ]_begin{% endcomment %}{% include 'ly-title' with linklists[settings.mega_4_links] %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}</h4>
        <ul class="mega-stack">
          {% for link in linklists[settings.mega_4_links].links %}
          <li>{% comment %}ly_code_replace_for_[ link.title | link_to: link.url ]_begin{% endcomment %}{% include 'ly-title' with link %}{{ ly_translation | link_to: link.url }}{% comment %}ly_code_replace_end{% endcomment %}</li>
          {% endfor %}
        </ul>
      </li> 
      {% endif %}    
      {% endif %}  
    </span>

  </ul>
</li>

{% elsif linklists[child_list_handle] and linklists[child_list_handle].links.size > 0 %}
<li class="dropdown">{% comment %}ly_code_replace_for_[ link.title | link_to: link.url ]_begin{% endcomment %}{% include 'ly-title' with link %}{{ ly_translation | link_to: link.url }}{% comment %}ly_code_replace_end{% endcomment %}  

  <ul class="submenu">
    {% for l in linklists[child_list_handle].links %}
    {% capture child_list_handle %}{{ l.title | handleize }}{% endcapture %}
    {% if linklists[child_list_handle] and linklists[child_list_handle].links.size > 0 %}      
    <li class="nest"><a href="{{ l.url }}">{% comment %}ly_code_replace_for_[ l.title ]_begin{% endcomment %}{% include 'ly-title' with l %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}</a>                 
      <ul class="nested">
        {% for l in linklists[child_list_handle].links %}
        <li><a href="{{ l.url }}">{% comment %}ly_code_replace_for_[ l.title ]_begin{% endcomment %}{% include 'ly-title' with l %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}</a></li>
        {% endfor %}
      </ul>
    </li>
    {% else %}
    <li><a href="{{ l.url }}">{% comment %}ly_code_replace_for_[ l.title ]_begin{% endcomment %}{% include 'ly-title' with l %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}</a></li>    
    {% endif %}

    {% endfor %}
  </ul>
</li>

{% else %}
<li>{% comment %}ly_code_replace_for_[ link.title | link_to: link.url ]_begin{% endcomment %}{% include 'ly-title' with link %}{{ ly_translation | link_to: link.url }}{% comment %}ly_code_replace_end{% endcomment %}</li>
{% endif %}