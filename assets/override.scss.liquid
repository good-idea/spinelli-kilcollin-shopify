  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  max-width: initial;
  height: 100%;
}

.carousel__slide[data-position="active"] {
  transition: .4s left;
  opacity: 1;
  z-index: 100;
  left: 0;
}

.carousel__slide[data-position="previous"] {
  transition: .4s left;
  opacity: 1;
  left: -100%;
}

.carousel__slide[data-position="next"] {
  transition: .4s left;
  opacity: 1;
  left: 100%;
}

.carousel.disableTransition {
  .carousel__slide[data-position="active"],
  .carousel__slide[data-position="previous"],
  .carousel__slide[data-position="next"] {
    transition: 0s;
  }
}



