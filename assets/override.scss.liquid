@mixin border-radius($radius) {
  -webkit-border-radius: $radius;
  -moz-border-radius: $radius;
  -ms-border-radius: $radius;
  border-radius: $radius;
}

@mixin box-shadow($shadow) {
  -webkit-box-shadow: $shadow;
  -moz-box-shadow: $shadow;
  -ms-box-shadow: $shadow;
  box-shadow: $shadow;
}

@mixin transform($transform) {
  -webkit-transform: $transform;
  -moz-transform: $transform;
  -ms-transform: $transform;
  transform: $transform;
}

@mixin transition($transition) {
  -webkit-transition: $transition;
  -moz-transition: $transition;
  -ms-transition: $transition;
  transition: $transition;
}

@mixin appearance($appearance) {
  -webkit-appearance: $appearance;
  -moz-appearance: $appearance;
  appearance: $appearance;
}

@mixin text-align-last($align) {
  -ms-text-align-last: $align;
  -moz-text-align-last: $align;
  text-align-last: $align;
}

@mixin breakpoint($point) {
  @if $point == tablet {
    @media (max-width: 980px) { @content; }
  }
  @else if $point == mobile {
    @media (max-width: 740px) { @content; }
  }
  @else if $point == fixed-header {
    @media (max-width: 1219px) { @content; }
  }
  @else if $point == cart-mobile {
    @media (max-width: 500px) { @content; }
  }
}

@mixin placeholder {
  &::-webkit-input-placeholder {@content}
  &:-moz-placeholder           { opacity: 1; @content}
  &::-moz-placeholder          { opacity: 1; @content}
  &:-ms-input-placeholder      {@content}
}

