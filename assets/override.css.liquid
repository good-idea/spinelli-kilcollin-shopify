nav [type="search"] {
  border: none;
  font-family: 'Josefin Sans', sans-serif; 
  font-weight: 300; 
  font-size: 13px; 
  color: #000000; 
  display: block; 
  padding: 0 20px; 
  text-transform: uppercase;
  -webkit-appearance: none;
  width: 120px;
  text-align: center
}

nav [type="search"]:focus {
  outline: none;
}


::-webkit-input-placeholder {
  color: #000; 
  transition: .25s ease-in-out;
}

:-moz-placeholder {
  color: #000;
  transition: .25s ease-in-out;
}

::-moz-placeholder {
  color: #000;
  transition: .25s ease-in-out;
}

:-ms-input-placeholder {
  color: #000;
  transition: .25s ease-in-out;
}

:placeholder-shown {
  color: #000;
  transition: .25s ease-in-out;
}

:focus::-webkit-input-placeholder {
  color: transparent;  
}

:focus:-moz-placeholder {
  color: transparent;  
}

:focus::-moz-placeholder {
  color: transparent;  
}

:focus:-ms-input-placeholder {
  color: transparent;  
}

:focus:placeholder-shown {
  color: transparent;
}